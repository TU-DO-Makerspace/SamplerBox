[Unit]
Description=+/-/MUTE volume control for devices with HID volume buttons (ex. PCM2704)
After=triggerhappy.service display-server.service
StartLimitIntervalSec=10
StartLimitBurst=5

[Service]
WorkingDirectory=/root/SamplerBox/
ExecStart=/usr/local/bin/inputexec --action-commands=/root/SamplerBox/volume-actions.ini --source-file=/dev/input/event0 --action-mode=run_sync --logging-level=info
Restart=always

[Install]
RequiredBy=basic.target